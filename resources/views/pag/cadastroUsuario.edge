<!-- PARTE MENU-->
<div class="container  ">
  
  <div class="cadastroCustom">
    <h2 class="row h-100 justify-content-center">Usuários</h2>
    <br>
    <!-- Titulos dos Menus -->
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#Cadastrar">Cadastrar</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu1">Alterar</a>
      </li>


    </ul>

    <!-- Propriedades dos Menus quando selecionado -->
    <div class="tab-content"  >
      <div id="Cadastrar" class="container tab-pane active"><br>


        <form class=" form-group" id="form" onsubmit="cadastraUsuario()" method="POST">
          <div class="form-group col-6">
            <label for="uname">Usuario:</label>
            <input type="text" class="form-control" id="username" name="username" required>
          </div>
          <div class="form-group col-6">
            <label for="uname">Nome:</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="form-group col-6">
            <label for="email">Endereço de Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>

          <div class="form-group col-6">
            <label for="email">Empresa:</label>
            <input type="text" class="form-control" id="empresa" name="empresa" >
          </div>

          <div class="col-auto">
            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" id="admin">
              <label class="form-check-label" for="autoSizingCheck">
                Administrador
              </label>              
            </div>
          </div>




          <div class="form-group col-3">
            <label for="pwd">Senha:</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <div class="form-group col-3">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
          </div>

        </form>
      </div>

      <!--  Menu de Alterar o Usuario   -->
      <div id="menu1" class="container tab-pane fade"><br>

        

        <form class=" form-group " id="formBusca" onsubmit="buscarUsuario()" method="POST">
          <div class="col-5 align-items-center">
            <label class="sr-only">Usuário</label>
            <div class="input-group mb-2">
              <input type="text" id="usuarioBusca" class="form-control" placeholder="Usuário" required>              
              <button type="" class="btn btn btn-outline-info mb-2">Buscar</button>
            </div>
          </div>
          <div class="col-auto">
          </div>
        </form>

        <form class=" form-group" id="formAltera"  method="POST">
          <fieldset id="campos" disabled>
            <div class="form-group col-6">
              <label for="disabledTextInput">Nome :</label>
              <input type="text" id="usuarioAltera" class="form-control" required>
            </div>
            <div class="form-group col-6">
              <label for="disabledTextInput">Empresa :</label>
              <input type="text" id="empresaAltera" class="form-control" required>
            </div>            
            <div class="form-group col-6">
              <label for="disabledTextInput">Endereço de Email :</label>
              <input type="email" id="emailAltera" class="form-control" required>
            <br>
              <div class="col-1">
            <div class="form-check mb-2">
              <input class="form-check-input" type="checkbox" id="adminAltera">
              <label class="form-check-label" for="autoSizingCheck">
               Administrador
               </label>              
              </div>
             </div>              
              

              <br>
              <button class="btn btn btn-outline-primary"onclick="alterarUsuario()" >Alterar</button>
              <button class="btn btn btn-outline-danger"  onclick="excluirUsuario()" data-toggle="modal"
              data-target="#exampleModal">Excluir</button>              
            </div>

          </fieldset>
        </form>
      </div>

    </div>
  </div>
</div>






